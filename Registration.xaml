<Window x:Class="DealerShipWPF.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DealerShipWPF"
        mc:Ignorable="d"
        Title="Registration" 
        Height="450" Width="800"
        MinHeight="400" MinWidth="700"
        MaxHeight="700" MaxWidth="1200"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Icon="Images/iconCarBlue.ico">
    <Grid>
        <StackPanel>
            <TextBox HorizontalAlignment="Center" x:Name="FName"  Width="300" Height="40"  Margin="10"></TextBox>
            <TextBox HorizontalAlignment="Center" x:Name="SName"  Width="300" Height="40"  Margin="10"></TextBox>
            <TextBox HorizontalAlignment="Center" x:Name="Login"  Width="300" Height="40" Margin="10"></TextBox>
            <TextBox HorizontalAlignment="Center" x:Name="Password"  Width="300" Height="40" Margin="10"></TextBox>
            <Button Width="100" Height="50" Content="Нажми" Click="Button_Click"></Button>
        </StackPanel>
        
    </Grid>
</Window>
